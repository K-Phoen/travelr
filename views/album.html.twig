<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>Travelr â€“ {{ album.title }}</title>

    <link href="../../dist/gallery.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <a class="navbar-brand" href="../../">Travelr</a>
    </nav>

    <main role="main">
        <div class="album py-5 bg-light">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h1>{{ album.title }}</h1>

                        {% if album.description %}
                            <p>{{ album.description }}</p>
                        {% endif %}
                    </div>
                </div>
                <div class="row">
                    <div id="grid" class="grid col-12">
                        {% for image in album.images %}
                        <div class="grid-item" data-src="{{ image.relativeTo(album.path).path }}">
                            <img class="card-img-top" src="{{ image.relativeTo(album.path).thumbnailPath }}" />
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="../../dist/album.js"></script>
</body>
</html>
